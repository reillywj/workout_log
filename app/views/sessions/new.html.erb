<%= render "shared/content_title", title: "Log In" %>

<div class="panel small-12 medium-6 large-4">
  <%= form_tag "/login" do %>
    <div>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag "Login", class: "button small radius expand" %>
  <% end %>
</div>