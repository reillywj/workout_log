<%= render "shared/content_title", title: "Log In" %>

<div class= "row">
  <div class="panel">
    <%= form_tag "/login" do %>
      <div class="row">
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>
      <div class="row">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>

      <%= submit_tag "Login", class: "button small radius" %>
    <% end %>
  </div>
</div>