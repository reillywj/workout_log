<%= render "shared/content_title", title: "Team Page" %>

<div class="panel">
  <% if logged_in_coach_or_admin? %>
    <%= link_to edit_team_path(@team), class: "right" do %>
      <i class="fi-pencil"></i>
    <% end %>
  <% end %>
  <h5><%= @team.name %></h5>
  <p><%= @team.location %></p>
</div>

<% if logged_in_coach_or_admin? %>
  <%= link_to "Add User", new_user_path, class: "button medium radius" %>
<% end %>

<ul class="small-block-grid-1 medium-block-grid-2" data-equalizer >
  <li>
    <div class="panel callout" data-equalizer-watch>
      <%= render "users/users_table", users: @team.users, role: "Athlete" %>
    </div>
  </li>
  <li>
    <div class="panel" data-equalizer-watch>
      <%= render "users/users_table", users: @team.users, role: "Coach" %>
    </div>
  </li>
</ul>