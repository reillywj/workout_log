<div class="nested-fields" data-equalizer>
  <div class="row">
    <div class="medium-5 column">
      <div class="row">
        <div class="medium-3 column">
          <%= f.label :date %>
        </div>
        <div class="medium-9 column end">
          <%= f.date_field :date%>
        </div>
      </div>
      <div class="row">
        <div class="medium-3 column">
          <%= f.label :am_pm, "AM or PM?" %>
        </div>
        <div class="medium-9 column end">
          <%= f.select :am_pm, ["AM", "PM"] %>
        </div>
      </div>
    </div>
    <div class="medium-1 column end">
      <%= link_to_remove_association "<i class='fi-x'></i>".html_safe, f, class: "button small radius alert", style: "margin-top:1.1rem;", data: {confirm: "Are you sure?"} %>
    </div>
  </div>
</div>
<hr>